<div class="row ">
    <div class="col s4 offset-s4">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field group input-field">
            <%= f.label :login %>
            <%= f.text_field :login, autofocus: true, :class => "validate" %>
          </div>

          <div class="field group input-field">
            <%= f.label :password %>
            <%= f.password_field :password, autocomplete: "off", :class => "validate"  %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>

          <div class="btnlog actions center-align">
            <%= f.submit "Connexion", :class => " btn" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>
