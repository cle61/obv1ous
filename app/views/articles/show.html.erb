<% content_for :title, @new.title + " - Obv1ous" %>
<div class="row">
    <div class="col s12 m12 l8 news">
        <div class="img_news">
            <%= image_tag(@new.image) %>
        </div>
        <div class="content-news">
            <h4 class='titre col s12'>
                <%= @new.title.capitalize %>
            </h4>
            <span class="content-news col s12">
                <%= @new.content.html_safe %>
            </span>
        </div>
    </div>

    <%= render :template => 'layouts/rightColumn' %>
</div>
