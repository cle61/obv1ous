<div class="row">
    <div class="col s12 m12 l8 ">
        <% @news.each do |new| %>
            <div class="card hoverable">
                <div class="card-image">
                  <% if new.image %>
                    <%= image_tag(new.image) %>
                  <% else %>
                    <%= image_tag("news4.png") %>
                    gg
                  <% end %>
                  <span class="card-title"><%= link_to new.title, article_path(new.id) %></span>
                </div>
                <div class="card-content">
                  <p><%= new.summary.html_safe %></p>
                </div>
                <div class="card-action ">
                  <%= link_to 'Lire la suite', article_path(new.id), :class => 'right light-blue-text text-darken-2' %>
                  <div class="clear"></div>
                </div>
            </div>
        <% end %>
    </div>
    <div class="col s4 hide-on-med-and-down"><!-- pour cacher en mobile .hide-on-small-only -->
        <div class="TwitchIndex">
            <iframe src="http://www.twitch.tv/sweubi/embed" frameborder="0" scrolling="no"></iframe>
        </div>
        <div class="scocialIndex">
            <a target="_blank" href="https://twitch.tv/sweubi"><img src="assets/twitch-sweubi.png" width='100%' alt="IMG for scocial" /></a>
            <a target="_blank" href="https://www.youtube.com/channel/UC_H1whaKGgectggA3eFJJqA"><img src="assets/yt-gaviil.png" width='100%' alt="IMG for scocial" /></a>
            <a target="_blank" href="https://www.youtube.com/channel/UCiT9Webajin3iuBHySfuQ3w"><img src="assets/yt-sweubi.png" width='100%' alt="IMG for scocial" /></a>
        </div>

    </div>
</div>
