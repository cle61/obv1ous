                    <%= image_tag(new.image) %>
                  <% else %>
                    <%= image_tag("news4.png") %>
                    gg
                  <% end %>
                  <span class="card-title"><%= link_to new.title.capitalize, article_path(new.id) %></span>
                </div>
                <div class="card-content">
                  <p><%= new.summary.html_safe %></p>
                </div>
                <div class="card-action ">
                  <%= link_to 'Lire la suite', article_path(new.id), :class => 'right light-blue-text text-darken-2' %>
