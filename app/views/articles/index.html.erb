<div class="row">
    <div class="col s12 m12 l8 ">
        <% @news.each do |new| %>
            <div class="card">
                <div class="card-image">
                  <% if new.image %>
                    <%= image_tag(new.image) %>
                  <% else %>
                    <%= image_tag("news4.png") %>
                    gg
                  <% end %>
                  <span class="card-title"><%= link_to new.title, article_path(new.id) %></span>
                </div>
                <div class="card-content">
                  <p><%= new.summary.html_safe %></p>
                </div>
                <div class="card-action ">
                  <%= link_to 'Lire la suite', article_path(new.id), :class => 'right light-blue-text text-darken-2' %>
                  <div class="clear"></div>
                </div>
            </div>
        <% end %>
    </div>
    <%= render :template => 'layouts/rightColumn' %>
</div>
