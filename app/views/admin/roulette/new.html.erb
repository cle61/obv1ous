<div class="row">
	<div class="col s12">
		<%= form_for(@roulette, url: admin_roulette_index_path, html: { method: :post }, id: 'new_roulette') do |f| %>

			<% @roulette.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>
			<div class="field input-field">
				<%= f.select(:team) do %>
					<% [['CT', 'CT'], ['T', 'T']].each do |c| -%>
						<%= content_tag(:option, c.first, value: c.last) %>
					<% end %>
				<% end %>
			</div>

			<div class="field input-field">
				<%= f.label :name, "Nom strat" %>
				<%= f.text_field :name, :class => "validate" %>
			</div>

			<div class="field input-field">
				<%= f.label :strat, "Strat" %>
				<%= f.text_area :strat, length: {minimum: 10}, :class => "materialize-textarea"  %>
			</div>

			<div class="btnlog actions">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Publier <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>

		<%= link_to 'Retour', admin_roulette_index_path %>
	</div>
</div>
<script>
$(document).ready(function() {
    $('select').material_select();
  });
</script>
