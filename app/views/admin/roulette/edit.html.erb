<div class="row">
	<div class="col s12">
		<%= form_for(@roulette, url: admin_roulette_path(@roulette.id), html: { method: :put }, id: 'edit_new_{@roulette.id}') do |f| %>

			<% @roulette.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field input-field col s12">
				<%= f.select(:team) do %>
					<% [['CT', 'CT'], ['T', 'T']].each do |c| -%>
						<%= content_tag(:option, c.first, value: c.last) %>
					<% end %>
				<% end %>
			</div>

			<div class="field input-field col s12">
				<%= f.label :strat, "Strat" %>
				<%= f.text_area :strat, length: {minimum: 10}, :class => "materialize-textarea"  %>
			</div>

			<div class="actions btnlog">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Editer <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
<script>
$(document).ready(function() {
    $('select').material_select();
  });
</script>
