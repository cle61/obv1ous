<div class="row">
	<div class="col s12">
		<%= form_for(@member, url: admin_team_members_path(@member.id), html: { method: :put }, id: 'edit_new_{@member.id}') do |f| %>

			<% @member.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field input-field">
				<%= f.label :name, "Nom" %>
				<%= f.text_field :name, autofocus: true, :class => "validate" %>
			</div>

			<div class="field input-field">
				<%= f.label :id_steam, "ID Steam" %>
				<%= f.text_field :id_steam, :class => "validate" %>
			</div>

			<div class="actions btnlog">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Editer <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
