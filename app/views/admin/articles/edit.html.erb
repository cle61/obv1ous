<div class="row">
	<div class="col s12">
		<%= form_for(@new, url: admin_article_path(@new.id), html: { method: :put }, id: 'edit_new_{@new.id}') do |f| %>

			<% @new.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field input-field">
				<%= f.label :title, "Titre" %>
				<%= f.text_field :title, class: 'form-control' , autofocus: true, :class => "validate" %>
			</div>

			<div class="field">
				<%= f.label :summary, "RÃ©sumÃ©" %>
				<%= f.cktext_area :summary, class: 'form-control', :class => "" %>
			</div>

			<div class="field">
				<%= f.label :content, "Contenu" %>
				<%= f.cktext_area :content, class: 'form-control', :class => "" %>
			</div>

		  	<div class="field input-field">
				<div><%= f.label :image %></div>
				<div class="file-field input-field">
					<div class="btn">
						<span>Image</span>
						<%= f.file_field :image %>
					</div>
						<div class="file-path-wrapper">
						<input class="file-path validate" type="text">
					</div>
			    </div>
				<div class="img-news">
					<%= image_tag(@new.image) if @new.image? %>
				</div>

			</div>

			<div class="actions btnlog">
				<%= button_tag(type: 'submit', class: "btn") do %>
					Editer <i class='material-icons right'>send</i>
				<% end %>
			</div>
		<% end %>
	</div>
</div>
