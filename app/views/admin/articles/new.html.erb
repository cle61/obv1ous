<div class="row">
	<div class="col s12">
		<%= form_for(@new, url: admin_articles_path, html: { method: :post }, id: 'new_news') do |f| %>

			<% @new.errors.full_messages.each do |msg| %>
				<%= msg %>
			<% end %>

			<div class="field">
				<%= f.label :title %><br />
				<%= f.text_field :title, class: 'form-control', length: {minimum: 10}, autofocus: true %>
			</div>

			<div class="field">
				<%= f.label :summary %><br />
				<%= f.text_area :summary, class: 'form-control', length: {minimum: 10} %>
			</div>

			<div class="field">
				<%= f.label :content %><br />
				<%= f.text_area :content, class: 'form-control', length: {minimum: 10} %>
			</div>

			<div class="field">
				<%= f.label :image %><br />
				<%= f.file_field :image %><br>
				<%= image_tag(@new.image) if @new.image? %>
			</div>

			<div class="actions">
				<%= f.submit "Publier" %>
			</div>
		<% end %>

		<%= link_to 'Back', news_index_path %>
	</div>
</div>