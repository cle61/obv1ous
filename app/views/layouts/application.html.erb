<html>
<head>
    <title><%= yield(:title).presence || 'Obv1ous' %></title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="google-site-verification" content="BCc9FCVB9jTzBLvcIfrjDViEPYSGN-6o9l-zR9hUrb4" />
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= favicon_link_tag 'favicon.ico' %>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-50448476-3', 'auto');
      ga('send', 'pageview');
    </script>
</head>
<body>
    <header>
        <div class="header-background" id="port">
            <div class="logo_obv">
                <%= image_tag('logo-trans.png', class: 'menu_icon') %>
            </div>
        </div>

        <!-- Dropdown Structure -->
        <nav>
            <div class="container">
                <div class="row">

                    <div class="nav-wrapper col s12">
                        <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
                        <ul class="side-nav" id="mobile-demo">
                            <li><%= link_to 'Accueil', root_path %></li>
                            <li><%= link_to 'Team', team_index_path %></li>
                            <li><%= link_to 'Galerie', gallery_index_path %></li>
                            <li><%= link_to 'Roulette', roulette_index_path %></li>
                            <li class="divider"></li>
                            <% if user_signed_in? %>
                                <li><a href=""><%= current_user.username.capitalize %></a></li>
                                <li><%= link_to 'Déconnexion', destroy_user_session_path, :id => "logout", :method => :delete %><li>
                            <% else %>
                                <li><%= link_to 'Connexion', new_user_session_path %></li>
                                <li><%= link_to 'Inscription', new_user_registration_path %></li>
                            <% end %>
                        </ul>
                        <ul class="left hide-on-med-and-down">
                            <li><%= link_to 'Accueil', root_path %><li>
                            <li><%= link_to 'Team', team_index_path %></li>
                            <li><%= link_to 'Galerie', gallery_index_path %></li>
                            <li><%= link_to 'Roulette', roulette_index_path %></li>
                        </ul>
                        <ul class="right hide-on-med-and-down ">
                            <% if user_signed_in? %>
                                <li class="pseudoNav"><a href=""><%= current_user.username.capitalize %></a></li>
                                <li><%= link_to 'Déconnexion', destroy_user_session_path, :id => "logout", :method => :delete %><li>
                            <% else %>
                                <li><%= link_to 'Connexion', new_user_session_path %></li>
                                <li><%= link_to 'Inscription', new_user_registration_path %></li>
                            <% end %>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container content">
        <% if notice %>
            <script type="text/javascript">
            $( document ).ready(function() {
                Materialize.toast('<%= notice %>', 4000);
            });
            </script>
        <% end %>
        <% if alert %>
            <script type="text/javascript">
            $( document ).ready(function() {
                Materialize.toast('<%= alert %>', 4000);
            });
            </script>
        <% end %>

        <%= yield %>
    </div>

    <footer class="page-footer">
      <div class="container">
        <div class="row">
          <div class="col l6 s12">
            <h5 class="white-text">À propos</h5>
            <p class="grey-text text-lighten-4">Obv1ous est une équipe E-sport amateur, principalement sur Counter Strike - Global Offensive.</p>
          </div>
          <div class="col l4 offset-l2 s12">
            <h5 class="white-text">Notre partenaire :</h5>
            <ul>
              <li><a class="grey-text text-lighten-3" rel="nofollow" href="#!">Faut faire une bannière *clin d'oeil clin d'oeil*</a></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="footer-copyright">
        <div class="container">
        © 2015 Copyright Obv1ous
        <!-- <a class="grey-text text-lighten-4 right" target="_blank" href="">Nous contacter</a> -->
        </div>
      </div>
    </footer>

    <script>
        jQuery(document).ready(function(){
            $(".button-collapse").sideNav(); //nav mobile
        });
    </script>
</body>
</html>
